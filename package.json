{
  "name": "guozha-poker-game",
  "version": "1.0.0",
  "description": "本地手机过炸打牌游戏",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "npm run build && electron-builder --dir",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:quick": "vitest --run --no-coverage",
    "test:play": "vitest --run --no-coverage playCardRegression",
    "test:refactor": "vitest --run --no-coverage refactorRegression useGameConfig usePlayerHand useChatBubbles useGameActions",
    "test:dealing": "vitest --run --no-coverage dealingAlgorithms",
    "test:regression": "vitest --run --no-coverage --reporter=verbose comprehensiveRegressionTests",
    "test:dealing-regression": "vitest --run --no-coverage dealingSortingRegression cardSorting",
    "test:chat-regression": "vitest --run --no-coverage chatServiceRegression chatAndVoiceRegression",
    "test:all-regression": "vitest --run --no-coverage regression dealingSortingRegression chatServiceRegression chatAndVoiceRegression",
    "test:sorting": "vitest --run --no-coverage cardSorting",
    "test:dealing-sorting": "vitest --run --no-coverage dealingSortingRegression",
    "test:dealing-features": "vitest --run --no-coverage dealingManualMode cardStacking dealingFeaturesRegression",
    "test:ai-avatar": "vitest --run --no-coverage aiPlayerAvatar dealingAIPlayerDisplay",
    "test:comprehensive": "vitest --run --no-coverage dealingSortingRegression cardSorting aiPlayerAvatar dealingAIPlayerDisplay dealingAlgorithms",
    "test:full-regression": "vitest --run --no-coverage regression dealingSortingRegression chatServiceRegression chatAndVoiceRegression dealingFeaturesRegression",
    "test:all": "vitest --run --no-coverage",
    "test:unit": "vitest --run --no-coverage --reporter=verbose comprehensiveUnitTests",
    "test:integration": "vitest --run --no-coverage --reporter=verbose integrationTests",
    "test:new": "vitest --run --no-coverage --reporter=verbose comprehensiveUnitTests comprehensiveRegressionTests integrationTests",
    "test:new-fast": "TEST_FAST=true vitest --run --no-coverage --reporter=verbose comprehensiveUnitTests comprehensiveRegressionTests integrationTests",
    "test:verbose": "vitest --run --reporter=verbose --no-coverage",
    "test:realtime": "vitest --run --reporter=verbose --no-coverage",
    "test:fast": "TEST_FAST=true vitest --run --reporter=verbose --no-coverage",
    "test:no-ui": "vitest --run --reporter=verbose --no-coverage --exclude '**/dealingAnimation.test.ts' --exclude '**/useChatBubbles.test.ts'",
    "test:no-async": "vitest --run --reporter=verbose --no-coverage --exclude '**/speechIntegration.test.ts' --exclude '**/speechUtils.test.ts' --exclude '**/chatAndVoiceRegression.test.ts' --exclude '**/chatServiceRegression.test.ts' --exclude '**/i18n.test.ts'",
    "test:ui-only": "vitest --run --reporter=verbose --no-coverage dealingAnimation useChatBubbles",
    "test:async-only": "vitest --run --reporter=verbose --no-coverage speechIntegration speechUtils chatAndVoiceRegression chatServiceRegression i18n",
    "test:slow-only": "vitest --run --reporter=verbose --no-coverage mctsTuning mctsTrainingRegression mctsTuningWithProgress mctsTuningQuick quickTuningFast runQuickTuning",
    "test:continuous": "vitest --run --reporter=verbose --no-coverage --bail=0",
    "test:all-with-logging": "node scripts/run-all-tests-with-logging.js",
    "i18n:scan": "tsx scripts/i18n/scan.ts",
    "i18n:generate": "tsx scripts/i18n/generate.ts",
    "i18n:validate": "tsx scripts/i18n/validate.ts",
    "i18n:types": "tsx scripts/i18n/types.ts",
    "i18n:migrate": "tsx scripts/i18n/migrate.ts",
    "i18n:migrate:dry-run": "tsx scripts/i18n/migrate.ts --dry-run",
    "i18n:migrate:report": "tsx scripts/i18n/migrate.ts --report",
    "i18n:sync": "tsx scripts/i18n/cli.ts sync",
    "i18n:cli": "tsx scripts/i18n/cli.ts"
  },
  "dependencies": {
    "i18next": "^25.6.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "openai": "^4.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.3.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "glob": "^13.0.0",
    "jsdom": "^22.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.guozha.poker",
    "productName": "过炸扑克",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
